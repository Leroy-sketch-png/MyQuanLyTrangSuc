<Page x:Class="MyQuanLyTrangSuc.View.ItemPropertiesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:MyQuanLyTrangSuc.View"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="880"
      x:Name="ItemPropertiesPage">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Background="White">
            <Button Content="BACK" Width="200" FontSize="25" Margin="10,10,0,0" Height="45" HorizontalAlignment="Left" Background="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"
                    Click="OnClick_Back_ItemPropertiesPage">
                <Button.Effect>
                    <DropShadowEffect/>
                </Button.Effect>
            </Button>
            <!-- Header -->
            <StackPanel>
                <DockPanel>
                    <TextBlock DockPanel.Dock="Left" Text="Jewelry's Properties" FontSize="36" FontWeight="Bold" Foreground="Black" Margin="20" HorizontalAlignment="Left"/>
                    <Button x:Name="editButton" Content="Edit?" FontWeight="Bold" HorizontalAlignment="Right" Width="160" Margin="20,20,40,20" FontSize="18"
                            Click="OnCLick_Edit_ItemPropertiesPage"
                            Background="#FFC1CC00"/>
                </DockPanel>
                <Separator BorderBrush="#FFC1CC00" BorderThickness="5" Margin="5,0,50,20"/>
            </StackPanel>
            <!-- Main Content -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300" MinWidth="160" MaxWidth="480"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="*" MinWidth="160"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="400"/>
                </Grid.RowDefinitions>

                <!-- Image Section -->
                <Border Grid.Column="0" Grid.Row="0" BorderBrush="PeachPuff" Padding="0" Margin="0" BorderThickness="10" CornerRadius="10">
                    <Grid x:Name="itemImageGrid">
                        <Image x:Name="itemImage" Source="{Binding Imagepath_item}"/>
                        <Button x:Name="inputItemImage" Background="Transparent" BorderBrush="Transparent" Height="{Binding ElementName=itemImageGrid, Path=ActualHeight}"
                Visibility="Collapsed" Click="OnClick_EditImage_ItemPropertiesPage"/>
                    </Grid>
                </Border>
                <GridSplitter Grid.Column="1" Grid.Row="0" Width="5" HorizontalAlignment="Stretch" Background="#623ed0"/>
                <!-- Details Section -->
                <StackPanel Grid.Column="2" Grid.Row="0" Background="#F0F0F0" Margin="10">
                    <Border Background="#FFC1CC00" CornerRadius="10" Padding="10" Margin="0, 0, 0, 10">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="CubeOutline" Width="37" Height="37" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" />
                            <Grid>
                                <TextBlock x:Name="itemName" FontSize="32" Text="{Binding Name_item, Mode=OneWay}" Foreground="White" FontWeight="Bold" TextAlignment="Center"
                                           Visibility="Visible"/>
                                <TextBox x:Name="inputItemName" FontSize="28" Text="{Binding Name_item, Mode=TwoWay}" Foreground="White" FontWeight="Bold" TextAlignment="Center"
                                         Visibility="Collapsed"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                    <TextBlock x:Name="itemID" FontSize="25" Text="{Binding id_item}" Foreground="DarkGray" TextAlignment="Center" Margin="0, 0, 0, 10"/>
                    <StackPanel Orientation="Horizontal" Margin="10, 0, 0, 15">
                        <materialDesign:PackIcon Kind="ShapePlus" Width="35" Height="35" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                        <TextBlock FontSize="25" Text="Category: " Foreground="Black" FontStyle="Italic" />
                        <Grid>
                            <TextBlock x:Name="itemCategory" FontSize="25" Text="{Binding Category_item, Mode=OneWay}" Foreground="#4682B4" FontWeight="SemiBold" 
                                       Visibility="Visible"/>
                            <ComboBox x:Name="inputItemCategory" FontSize="25" Text="{Binding Category_item, Mode=TwoWay}" Foreground="#4682B4" FontWeight="SemiBold" IsEditable="True"
                                       Visibility="Collapsed"/>
                        </Grid>

                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="10, 0, 0, 15">
                        <materialDesign:PackIcon Kind="AlphaUBoxOutline" Width="35" Height="35" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                        <TextBlock FontSize="25" Text="Unit: " Foreground="Black" FontStyle="Italic" />
                        <Grid>
                            <TextBlock x:Name="itemUnit" FontSize="25" Text="{Binding Unit_item, Mode=OneWay}" Foreground="#4682B4" FontWeight="SemiBold" 
                                       Visibility="Visible"/>
                            <ComboBox x:Name="inputItemUnit" FontSize="25" Text="{Binding Unit_item, Mode=TwoWay}" Foreground="#4682B4" FontWeight="SemiBold" IsEditable="True"
                                       Visibility="Collapsed"/>
                        </Grid>

                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="10, 0, 0, 15">
                        <materialDesign:PackIcon Kind="CurrencyUsd" Width="35" Height="35" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                        <TextBlock FontSize="25" Text="Price per Unit: " Foreground="Black" />
                        <Grid>
                            <TextBlock x:Name="itemPrice" FontSize="25" Text="{Binding str_price_item, Mode=OneWay}" Foreground="DarkGreen" FontWeight="Bold" 
                                       Visibility="Visible"/>
                            <TextBox x:Name="inputItemPrice" FontSize="25" Text="{Binding Price_item, Mode=TwoWay}" Foreground="DarkGreen" FontWeight="Bold" 
                                     Visibility="Collapsed"
                                     PreviewTextInput="OnPreviewTextInput_PriceTextBox_ItemPropertiesPageUI"
                                     DataObject.Pasting="OnPasting_PriceTextBox_ItemPropertiesPageUI"/>
                        </Grid>

                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="10, 0, 0, 15">
                        <materialDesign:PackIcon Kind="TallyMark3" Width="35" Height="35" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                        <TextBlock FontSize="25" Text="Stock: " Foreground="Black" />
                        <Grid>
                            <TextBlock x:Name="itemStock" FontSize="25" Text="{Binding Stock_item, Mode=OneWay}" Foreground="#8B0000" FontWeight="Bold" 
                                       Visibility="Visible"/>
                            <TextBox x:Name="inputItemStock"  FontSize="25" Text="{Binding Stock_item, Mode=TwoWay}" Foreground="#8B0000" FontWeight="Bold" 
                                     Visibility="Collapsed"
                                     PreviewTextInput="OnPreviewTextInput_StockTextBox_ItemPropertiesPageUI"
                                     DataObject.Pasting="OnPasting_StockTextBox_ItemPropertiesPageUI"/>
                        </Grid>

                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="10, 0, 0, 15">
                        <materialDesign:PackIcon Kind="ListStatus" Width="35" Height="35" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                        <TextBlock FontSize="25" Text="Status: " Foreground="Black" />
                        <Grid>
                            <TextBlock x:Name="itemStatus" FontSize="25" Text="{Binding status_item}" Foreground="Blue" FontWeight="Bold" />
                        </Grid>

                    </StackPanel>
                </StackPanel>
            </Grid>

            <!-- Description Section -->
            <Border BorderBrush="Black" BorderThickness="1" Margin="0, 20, 0, 0">
                <TextBlock Text="---Item Description---" FontSize="20" Margin="10" HorizontalAlignment="Center"/>
            </Border>
            <Grid Width="{Binding ElementName=ItemPropertiesPage, Path=ActualWidth}">
                <TextBox x:Name="itemDescription" AcceptsReturn="True" SpellCheck.IsEnabled="True" Text="{Binding Moreinfo_item, Mode=TwoWay}" FontSize="20" TextWrapping="Wrap" Margin="10"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         IsReadOnly="True"/>
            </Grid>
            <!-- Footer -->
            <TextBlock Text="© 2024 DELTA STEEL" FontSize="14" Foreground="Gray" HorizontalAlignment="Center" Margin="20"/>
        </StackPanel>
    </ScrollViewer>
</Page>