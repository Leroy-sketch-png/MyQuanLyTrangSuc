<Window x:Class="MyQuanLyTrangSuc.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:MyQuanLyTrangSuc"
        mc:Ignorable="d"
        Title="MainWindow" Height="645" Width="875"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        FontSize="18"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <Window.Resources>
        <!-- Light and Dark Theme Styles for Hint Text -->
        <Style x:Key="LightHintStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="Gray"/>
        </Style>

        <Style x:Key="DarkHintStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.Effect>
            <DropShadowEffect BlurRadius="30"
                              ShadowDepth="1"
                              Opacity="0.4" />
        </Grid.Effect>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="1.22*"/>
        </Grid.ColumnDefinitions>

        <Border Background="#623ed0"
               CornerRadius="10 0 0 10"
               ClipToBounds="True" Name="LeftBorder">

            <Border.Clip>
                <RectangleGeometry Rect="0,0,400,605"
                                   RadiusX="10"
                                   RadiusY="10"/>
            </Border.Clip>

            <Grid>
                <StackPanel Margin="0 120 0 0"
        VerticalAlignment="Top">

                    <TextBlock FontSize="46"
               FontStyle="Normal"
               FontWeight="Medium"
               Text="WELCOME BACK"
               Foreground="#ba80d3"
               TextAlignment="Center" 
               FontFamily="Bold"
                               Margin="0 0 0 -40"/>
                </StackPanel>
                <Ellipse Width="500"
                     Height="500"
                     VerticalAlignment="Bottom"
                     Fill="#ba80d3"
                     Margin="50 0 0 -200"
                     Opacity="0.6"/>
                <Ellipse Width="300"
                     Height="300"
                     VerticalAlignment="Bottom"
                     Fill="#ba80d3"
                     Margin="-450 0 0 30"
                     Opacity="0.3"/>
                <Ellipse Width="400"
                     Height="400"
                     VerticalAlignment="Bottom"
                     Fill="#ba80d3"
                     Margin="-320 0 0 -120"
                     Opacity="0.3"/>
                <Ellipse Width="250"
                     Height="250"
                     VerticalAlignment="Bottom"
                     Fill="#ba80d3"
                     Margin="-380 0 0 -130"/>
                <Ellipse Width="400"
                     Height="400"
                     VerticalAlignment="Bottom"
                     Fill="#ba80d3"
                     Margin="280 0 0 -70"
                     Opacity="0.8"/>

                <!--Icon-->

                <!--<Border Background="#fdfdfd"
                        CornerRadius="100"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        Height="100"
                        Width="100"
                        Margin="0 0 0 80">

                    -->
                <!--<Grid>
                        <Ellipse Width="90"
                         Height="90"
                         StrokeThickness="4">
                            <Ellipse.Stroke>
                                <LinearGradientBrush>
                                    <GradientStop Color="#6a0c92"           />
                                </LinearGradientBrush>
                            </Ellipse.Stroke>
                        </Ellipse>
                        -->
                <!--<materialDesign:PackIcon Kind="AccountSupervisorCircle"
                                         Width="80"
                                         Height="80"
                                         HorizontalAlignment="Center" VerticalAlignment="Center">
                            <materialDesign:PackIcon.Foreground>
                                <LinearGradientBrush>
                                    <GradientStop Color="#ba80d3"/>
                                </LinearGradientBrush>
                            </materialDesign:PackIcon.Foreground>
                        </materialDesign:PackIcon>-->
                <!--

                    </Grid>-->
                <!--
                </Border>-->

            </Grid>
        </Border>

        <!--Right selection-->
        <Border Grid.Column="1" Name="RightBorder"
                        Background="#FF272E3C"
                        CornerRadius="0 20 20 0"
                        RenderTransformOrigin="0.493,0.589"><!--MouseDown="Border_MouseDown"-->
            <Grid>
                <Grid>
                    <Ellipse Width="90"
                         Height="90"
                         StrokeThickness="4" Margin="184,62,185,453">
                        <Ellipse.Stroke>
                            <LinearGradientBrush>
                                <GradientStop Color="#ba80d3"           />
                            </LinearGradientBrush>
                        </Ellipse.Stroke>
                    </Ellipse>
                    <materialDesign:PackIcon Kind="AccountSupervisorCircle"
                                         Width="80"
                                         Height="80"
                                         HorizontalAlignment="Center" Margin="0,67,0,0">
                        <materialDesign:PackIcon.Foreground>
                            <LinearGradientBrush>
                                <GradientStop Color="#ba80d3"/>
                            </LinearGradientBrush>
                        </materialDesign:PackIcon.Foreground>
                    </materialDesign:PackIcon>

                </Grid>
                <ToggleButton
                    
                    Style="{StaticResource MaterialDesignSwitchDarkToggleButton}"
                    ToolTip="MaterialDesignSwitchDarkToggleButton" Margin="415,-496,0,0" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" Width="34" ><!--Checked="ToggleButton_Checked" Unchecked="ToggleButton_Unchecked"-->
                    <ToggleButton.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleX="-1"/>
                            <SkewTransform AngleY="-1.591"/>
                            <RotateTransform/>
                            <TranslateTransform Y="0.472"/>
                        </TransformGroup>
                    </ToggleButton.RenderTransform>
                </ToggleButton>
                <!--Close Icon-->
                <materialDesign:PackIcon Kind="Close"
                                         Height="20"
                                         Margin="425,13,14,0" 
                                         HorizontalAlignment="Stretch"
                                        
                                         Name="CloseIcon"
                                         Foreground="#ba80d3"
                                         /> <!--MouseLeftButtonUp="CloseButton_Click"-->

                <!--Inputs-->
                <StackPanel VerticalAlignment="Center"
                                    Margin="75 0">

                    <TextBox Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                     Name="UsernameBox"
                                     materialDesign:HintAssist.Hint="Username"
                                     materialDesign:HintAssist.FloatingOffset="0,-20"
                                     BorderBrush="#c5c8cc"
                                     BorderThickness="0 0 0 1.5">
                        <TextBox.Resources>
                            <Style TargetType="TextBlock" BasedOn="{StaticResource LightHintStyle}" x:Key="DynamicHintStyle">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsChecked, ElementName=ThemeToggleButton}" Value="True">
                                        <Setter Property="Foreground" Value="White"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsChecked, ElementName=ThemeToggleButton}" Value="False">
                                        <Setter Property="Foreground" Value="Gray"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>

                    <PasswordBox Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                                     Name="PasswordBox"
                                     materialDesign:HintAssist.Hint="Password"
                                     materialDesign:HintAssist.FloatingOffset="0,-20"
                                     BorderBrush="#c5c8cc"
                                     Margin="0 26"
                                     BorderThickness="0 0 0 1.5">
                        <PasswordBox.Resources>
                            <Style TargetType="TextBlock" BasedOn="{StaticResource LightHintStyle}" x:Key="DynamicHintStyle">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsChecked, ElementName=ThemeToggleButton}" Value="True">
                                        <Setter Property="Foreground" Value="White"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsChecked, ElementName=ThemeToggleButton}" Value="False">
                                        <Setter Property="Foreground" Value="Gray"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </PasswordBox.Resources>
                    </PasswordBox>

                    <Button x:Name="forgotPasswordTextBox" 
                            Background="Transparent" 
                            Content="Forgot Password" 
                            Foreground="#ba80d3"
                            Width="140" BorderBrush="Transparent"/> <!--Click="forgotPasswordTextBox_Click"-->

                    <!--SignIn Button-->
                    <StackPanel Orientation="Horizontal" Height="77">
                        <Button Content="Sign In"
                                        Background="#ba80d3"
                                        FontSize="18"
                                        Width="307"
                                        Height="45"
                                        materialDesign:ButtonAssist.CornerRadius="22"
                                        /> <!--Click="OnClick_Login"-->
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

    </Grid>
</Window>
