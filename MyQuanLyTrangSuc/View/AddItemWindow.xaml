<Window x:Class="MyQuanLyTrangSuc.View.AddItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:MyQuanLyTrangSuc.View"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Height="500" Width="500">
    <Grid Background="#F2F2F2">
        <Grid.RowDefinitions>
            <RowDefinition Height="89*"/>
            <RowDefinition Height="32*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="ADDING ITEM..." FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"/>
        <StackPanel Margin="40,70,40,0" Grid.RowSpan="2">
            <StackPanel Margin="0,0,0,30" HorizontalAlignment="Center" Orientation="Horizontal">
                <TextBlock Text="ID: " FontSize="20" Margin="0,0,10,0"/>
                <TextBlock x:Name="IDTextBlock" Text="{Binding NewID}" FontSize="16" Margin="0,0,10,0" VerticalAlignment="Center"/>
            </StackPanel>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,20,0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="RenameBox" Margin="0 2 3 0" Height="25" Width="25" VerticalAlignment="Top" HorizontalAlignment="Stretch"/>
                        <TextBlock Text="Item's Name: " FontSize="16" Margin="0,0,0,5" VerticalAlignment="Bottom"/>
                    </StackPanel>
                    <TextBox x:Name="NameTextBox" Text="{Binding Name, Mode=TwoWay}" FontSize="14" BorderThickness="1" Margin="0,0,0,10"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Margin="20,0,0,0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="shape" Margin="0 2 3 0" Height="25" Width="25" VerticalAlignment="Top" HorizontalAlignment="Stretch"/>
                        <TextBlock Text="Category: " FontSize="16" Margin="0,0,0,5" VerticalAlignment="Bottom"/>
                    </StackPanel>

                    <ComboBox x:Name="CategoryComboBox" ItemsSource="{Binding Categories}" SelectedItem="{Binding Category, Mode=TwoWay}" IsEditable="True" FontSize="14" Margin="0,0,0,10"/>
                </StackPanel>
            </Grid>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Margin="0,0,20,0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="CurrencyUsd"  Margin="0 2 3 0" Height="25" Width="25" VerticalAlignment="Top" HorizontalAlignment="Stretch"/>
                        <TextBlock Text="Price: " FontSize="16" Margin="0,0,0,5"/>
                    </StackPanel>

                    <TextBox x:Name="PriceTextBox" Text="{Binding Price, Mode=TwoWay}" FontSize="14" BorderThickness="1" Margin="0,0,0,10"
                             PreviewTextInput="OnPreviewTextInput_PriceTextBox_AddItem"
                             DataObject.Pasting="OnPasting_PriceTextBox_AddItem"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Margin="20,0,0,0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="TallyMark3" Margin="0 2 3 0" Height="25" Width="25" VerticalAlignment="Top" HorizontalAlignment="Stretch"/>
                        <TextBlock Text="Stock: " FontSize="16" Margin="0,0,0,5"/>
                    </StackPanel>

                    <TextBox x:Name="StockTextBox" Text="{Binding Stock, Mode=TwoWay}" FontSize="14" BorderThickness="1" Margin="0,0,0,10"
                             PreviewTextInput="OnPreviewTextInput_StockTextBox_AddItem"
                             DataObject.Pasting="OnPasting_StockTextBox_AddItem"/>
                </StackPanel>
            </Grid>

            <Grid>
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="AlphaUBoxOutline"  Margin="0 2 3 0" Height="25" Width="25" VerticalAlignment="Top" HorizontalAlignment="Stretch"/>
                        <TextBlock Text="Unit: " FontSize="16" Margin="0,3,0,5"/>
                    </StackPanel>
                    <TextBox x:Name="UnitTextBox" Text="{Binding Unit, Mode=TwoWay}" Width="190" HorizontalAlignment="Left"  FontSize="14" BorderThickness="1" Margin="0,0,0,10"
                             />
                </StackPanel>
            </Grid>


            <StackPanel Margin="0,5,0,10">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="FileImage" Width="20" Height="20"/>
                    <TextBlock Text="Image Path: " FontSize="16" Margin="0,0,0,5"/>
                </StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBox Grid.Column="0" x:Name="ImagePathTextBox" Text="{Binding ImagePath, Mode=TwoWay}" FontSize="14" BorderThickness="1" Margin="0,0,0,10"/>
                    <Button Grid.Column="1" x:Name="ChooseImageButton" Click="OnClick_ChooseImage_AddItem" Content="Choose Image" FontSize="14" Background="#4CAF50" Foreground="White" Margin="0,0,0,10" HorizontalAlignment="Right"/>
                </Grid>
            </StackPanel>

            <Button x:Name="AddButton" Content="ADD" FontSize="20" Background="#FFC1CC00" Foreground="White" Padding="5" HorizontalAlignment="Center" Width="70" Height="40"
                    Click="OnClick_Add_AddItem"/>
        </StackPanel>
    </Grid>
</Window>