<Page x:Class="MyQuanLyTrangSuc.View.ExportRecordPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
      xmlns:theme="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero2"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="880"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Page.Resources>
    <Border Background="#eff2f7" CornerRadius="30">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <!--Main Section-->
            <Grid Grid.Column="1" HorizontalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>

                </Grid.RowDefinitions>

                <!--Top Button-->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 0 15 0">
                    <TextBlock x:Name="welcomeTextBlock" Foreground="#374655" FontSize="14" Margin="0 0 10 0"
                VerticalAlignment="Center" Text="Welcome, have a nice day" FontStyle="Italic">
                        <TextBlock.RenderTransform>
                            <TranslateTransform x:Name="textTransform" X="-50"/>
                        </TextBlock.RenderTransform>
                        <TextBlock.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetName="textTransform" 
                     Storyboard.TargetProperty="X" 
                     From="-50" To="0" Duration="0:0:4" 
                     AutoReverse="True" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </TextBlock.Triggers>
                    </TextBlock>

                </StackPanel>

                <!--Page Title-->
                <TextBlock Text="Export Records Page" HorizontalAlignment="Left" VerticalAlignment="Center"
                            Margin="55 0 0 2" FontSize="16" FontWeight="SemiBold" Foreground="Blue"/>

                <Icon:PackIconMaterial Kind="Message" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="33 0 0 4" Width="14" Height="14" Foreground="#ff9d00"/>
                <Icon:PackIconMaterial Kind="Message" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="30 4 0 0" Width="14" Height="14" Foreground="#4880ff"/>

                <TextBlock Text="Export Records" Grid.Row="1" FontSize="32" FontWeight="SemiBold" 
                       Margin="20 20 0 0" HorizontalAlignment="Left" Foreground="#121518"/>

                <!--Add Button-->
                <Button Style="{StaticResource addButton}" Margin="0 0 20 5" Grid.RowSpan="4" Grid.Row="1" 
                        Click="OnClick_AddRecord_ExportRecordPage">
                    <StackPanel Orientation="Horizontal">
                        <Icon:PackIconMaterial Kind="Plus" VerticalAlignment="Center" Width="11"
                                           Height="11" Margin="0 1 8 0"/>
                        <TextBlock Text="Add new record"/>
                    </StackPanel>
                </Button>

                <!--Separator-->
                <Separator Grid.Row="3" BorderBrush="#ba80d3" BorderThickness="10" Margin="5,10,30,10"/>

                <!--Filter TextBox-->
                <Grid Width="200" HorizontalAlignment="Left" Grid.Row="4" Margin="10 0 10 0">
                    <TextBlock x:Name="searchTextBlock" Margin="15 8 0 5" VerticalAlignment="Center" Foreground="#b0b9c6"
                               IsHitTestVisible="False" Panel.ZIndex="1" Text="Search by customer"
                               Visibility="{Binding ElementName=searchTextBox, Path=Text.IsEmpty, Converter={StaticResource BoolToVis}}"/>
                    <TextBox TextChanged="searchTextBox_TextChanged" x:Name="searchTextBox" Style="{StaticResource textboxFilter}" Margin="0 0 0 0"/>
                </Grid>

                <ComboBox Name="searchComboBox" Height="30" Grid.Row="4" Margin="220 0 0 0" HorizontalAlignment="Left" Width="120">
                    <ComboBoxItem Content="Date"/>
                    <ComboBoxItem Content="ID"/>
                    <ComboBoxItem Content="Customer"/>
                </ComboBox>

                <!--Members DataGrid-->
                <DataGrid x:Name="membersDataGrid" Style="{DynamicResource DataGridStyle1}" CellStyle="{DynamicResource DataGridCellStyle1}" RowStyle="{DynamicResource DataGridRowStyle1}" Grid.Row="5"
                          ItemsSource="{Binding ExportRecords}"
                          MouseDoubleClick="OnDoubleClick_InspectRecord_ExportRecordPageDataGrid">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" IsReadOnly="True" CanUserResize="False" Width="80" Binding="{Binding id_export}"/>
                        <DataGridTextColumn Header="Date" IsReadOnly="True" Width="0.8*" Binding="{Binding date_export}"/>
                        <DataGridTextColumn Header="Exported To" IsReadOnly="True" Width="0.9*" Binding="{Binding CUSTOMER.Name_customer}"/>
                        <DataGridTextColumn Header="Revenue" IsReadOnly="True" Width="*" Binding="{Binding revenue_export}"/>
                        <DataGridTemplateColumn Header="Operations" IsReadOnly="True" Width="auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" >
                                        <Button Click="viewButton_Click" Margin="0 0 3 0"
                                                x:Name="viewButton" Style="{StaticResource gridEditButton}">
                                            <Icon:PackIconMaterial Kind="ViewListOutline" Style="{StaticResource gridButtonIcon}"/>
                                        </Button>
                                        <Button Margin="3 0 0 0" x:Name="printButton" Click="printButton_Click" Style="{StaticResource gridEditButton}">
                                            <Icon:PackIconMaterial Kind="Printer" Style="{StaticResource gridButtonIcon}"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>


                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
    </Border>
</Page>
