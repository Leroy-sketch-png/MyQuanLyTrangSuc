<Page x:Class="MyQuanLyTrangSuc.View.Pages.ServiceCategoryListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyQuanLyTrangSuc.View.Pages"
      mc:Ignorable="d" 
      xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      d:DesignHeight="720" d:DesignWidth="880"
      Title="ServiceCategoryListPage">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Page.Resources>
    
    <Border Background="#eff2f7" CornerRadius="30">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <!--Main Section-->
            <Grid Grid.Column="1" HorizontalAlignment="Center">

                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <!--Page Title-->
                <TextBlock Text="Service Category Page" HorizontalAlignment="Left" VerticalAlignment="Center"
                       Margin="55 0 0 2" FontSize="16" FontWeight="SemiBold" Foreground="Blue"/>
                <Icon:PackIconMaterial Kind="Message" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="33 0 0 4" Width="14" Height="14" Foreground="#ff9d00"/>
                <Icon:PackIconMaterial Kind="Message" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="30 4 0 0" Width="14" Height="14" Foreground="#4880ff"/>

                <!--Top Button-->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 0 15 0">
                    <TextBlock x:Name="welcomeTextBlock" Foreground="#374655" FontSize="14" Margin="0 0 10 0"
                           VerticalAlignment="Center" Text="Welcome, have a nice day" FontStyle="Italic">
                        <TextBlock.RenderTransform>
                            <TranslateTransform x:Name="textTransform" X="-50"/>
                        </TextBlock.RenderTransform>
                        <TextBlock.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetName="textTransform"
                                                     Storyboard.TargetProperty="X"
                                                     From="-50" To="0" Duration="0:0:4"
                                                     AutoReverse="True" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </TextBlock.Triggers>
                    </TextBlock>
                </StackPanel>

                <!--Page Title-->
                <TextBlock Text="Service Category" Grid.Row="1" FontSize="32" FontWeight="SemiBold"
                       Margin="10 20 0 0" HorizontalAlignment="Left" Foreground="#121518"/>

                <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Right">
                    <!--Add Button-->
                    <Button x:Name="addButton" Style="{StaticResource addButton}"
                        Grid.RowSpan="4" Grid.Row="1" >
                        <StackPanel Orientation="Horizontal">
                            <Icon:PackIconMaterial Kind="Plus" VerticalAlignment="Center" Width="15"
                                               Height="15" Margin="0 1 8 0"/>
                            <TextBlock Text="New service type" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>

                    <!--Import Button-->
                    <Button x:Name="importExcelFileButton" Click="importExcelFileButton_Click"
                        Style="{StaticResource addButton}" Grid.Row="1" Grid.RowSpan="4">
                        <StackPanel Orientation="Horizontal">
                            <Icon:PackIconMaterial Kind="FileImport" VerticalAlignment="Center" Width="15" Height="15" Margin="0 1 8 0"/>
                            <TextBlock Text="Import" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>

                    <!--Export Button-->
                    <Button x:Name="exportExcelFileButton" Click="exportExcelFileButton_Click"
                        Style="{StaticResource addButton}" Grid.Row="1" Grid.RowSpan="4">
                        <!--Click="exportExcelFileButton_Click"-->
                        <StackPanel Orientation="Horizontal">
                            <Icon:PackIconMaterial Kind="FileExport" VerticalAlignment="Center" Width="15" Height="15" Margin="0 1 8 0"/>
                            <TextBlock Text="Export" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!--Separator-->
                <Separator Grid.Row="3" BorderBrush="#747525" BorderThickness="10" Margin="20,10,20,10"/>

                <!--Filter TextBox-->
                <Grid Width="200" HorizontalAlignment="Left" Grid.Row="4" Margin="10 0 10 0">
                    <TextBox x:Name="searchTextBox" Style="{StaticResource textboxFilter}" Margin="0 0 0 0" FontSize="20"/>
                </Grid>


                <ComboBox Name="searchComboBox" Height="30" Grid.Row="4" Margin="220,0,0,0" HorizontalAlignment="Left" Width="120">
                    <ComboBoxItem Content="Name"/>
                    <ComboBoxItem Content="ID"/>
                </ComboBox>

                <!--Service Categories DataGrid-->
                <DataGrid AutoGenerateColumns="False" IsReadOnly="True" 
                      CanUserSortColumns="True"
                      ItemsSource="{Binding ServiceCategories}" x:Name="serviceCategoriesDataGrid" 
                      Style="{DynamicResource DataGridStyle1}"  
                      RowStyle="{DynamicResource DataGridRowStyle1}" 
                      SelectedItem="{Binding SelectedServiceCategory, Mode=TwoWay}"
                      CellStyle="{DynamicResource DataGridCellStyle1}" Grid.Row="5">
                    <DataGrid.Columns>

                        <DataGridCheckBoxColumn Width="0.5*">
                            
                        </DataGridCheckBoxColumn>
                        
                        <!--ID-->
                        <DataGridTextColumn Binding="{Binding ServiceId}" Header="ID" IsReadOnly="True" CanUserResize="False" Width="*"/>

                        <!--Name-->
                        <DataGridTextColumn Header="Name" Width="1.2*" Binding="{Binding ServiceName}" CanUserResize="False" IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextWrapping" Value="Wrap"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!--Price-->
                        <DataGridTextColumn Header="Unit Price" Width="*" Binding="{Binding ServicePrice}" CanUserResize="False" IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextWrapping" Value="Wrap"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!--More info-->
                        <DataGridTextColumn Header="More info" Width="1.2*" Binding="{Binding MoreInfo}" CanUserResize="False" IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextWrapping" Value="Wrap"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!--Operations-->
                        <DataGridTemplateColumn Header="Operations" IsReadOnly="True" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button x:Name="editButton" Style="{StaticResource gridEditButton}">
                                            <Icon:PackIconMaterial Kind="PencilOutline" Style="{StaticResource gridButtonIcon}"/>
                                        </Button>

                                        <Button x:Name="deleteButton" Style="{StaticResource gridRemoveButton}" Margin="5 0 0 0">
                                            <Icon:PackIconMaterial Kind="DeleteOutline" Style="{StaticResource gridButtonIcon}"/>
                                        </Button>

                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
    </Border>
</Page>
